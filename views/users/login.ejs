<%- layout('layouts/boilerplate.ejs') %>
<div class="row justify-content-center mt-2 mt-sm-3">
    <div class="">
        <h3 class="text-center mb-4">Welcome Back!</h3>
        
        <div class="card p-4 shadow-sm bg-light">
            <form action="/login" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="login" class="form-label">Username or Email</label>
                    <input type="text" id="login" name="login" class="form-control bg-white" placeholder="Enter your username or email" required>
                    <div class="invalid-feedback">Please enter your username or email.</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control bg-white" placeholder="Enter your password" required>
                    <div class="invalid-feedback">Please enter your password.</div>
                </div>
                <div class="d-flex justify-content-between">
                    <a href="/forget" class="text-muted">Forgot your password?</a>
                </div>
                <button class="btn btn-success w-100 mt-3 mb-2">Login</button>
            </form>

            <!-- New to SwapHub? Sign Up link -->
            <div class="text-center mt-3">
                <p class="text-muted">New to SwapHub?<br> <a href="/signup" class="text-success fw-bold">Create an account</a></p>
            </div>
        </div>
    </div>
</div>
