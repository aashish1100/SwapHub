<%- layout('layouts/boilerplate.ejs') %>

<div class="row justify-content-center">
    <div class="">
        <h3 class="text-center mb-3">Book Product</h3>
        <div class="card p-4 shadow-sm bg-light">
            <p class="text-center mb-sm-3 mb-2">The owner will send the details to your WhatsApp number.</p>
            <form action="/listings/<%= listing._id %>/book" method="POST" novalidate class="needs-validation">
                <div class="mb-2">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" id="name" name="name" class="form-control bg-white" placeholder="Enter your name" required>
                    <div class="invalid-feedback">Name can't be empty.</div>
                </div>
                <div class="mb-2">
                    <label for="number" class="form-label">WhatsApp No.</label>
                    <input type="text" id="number" name="number" class="form-control bg-white" placeholder="Enter your WhatsApp number" minlength="10" required>
                    <div class="invalid-feedback">WhatsApp No. must be at least 10 digits.</div>
                </div>
                <div class="mb-2">
                    <label for="message" class="form-label">Message</label>
                    <textarea id="message" name="message" class="form-control bg-white" placeholder="Write your message here" required>Need this product</textarea>
                    <div class="invalid-feedback">Message can't be empty.</div>
                </div>
                <button class="btn btn-success w-100 mt-sm-3 mt-1 mb-sm-2">Book</button>
            </form>
        </div>
    </div>
</div>